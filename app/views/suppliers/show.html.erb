<h3>Fornecedor: <%= @supplier.name %> </h1>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
      <th>Nome Fantasia</th>
      <th>Razão Social</th>
      <th>CNPJ</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Endereço</th>
    </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @supplier.name %></td>
          <td><%= @supplier.company_name %></td>
          <td><%= @supplier.cnpj %></td>
          <td><%= @supplier.email %></td>
          <td><%= @supplier.telephone %></td>
          <td><%= @supplier.address %></td>
        </tr>
      </tbody>
  </table>

  <div class='d-flex justify-content-start'>
    <div>
      <%= link_to('Voltar', suppliers_path, class:"btn btn-secondary")%>
    </div>
    <div>
      <%= link_to('Editar', edit_supplier_path(@supplier.id), class:'btn btn-primary')%>
    </div>
</div>
