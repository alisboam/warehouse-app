<h2>Fornecedores</h2>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
      <th>Nome Fantasia</th>
      <th>Razão Social</th>
      <th>CNPJ</th>
      <th>Ver Detalhes</th>
    </tr>
    </thead>
    <tbody>
      <% @supplier.each do |field|%>
        <tr>
          <td><%= link_to(field.name, supplier_path(field.id)) %></td>
          <td><%= link_to(field.company_name, supplier_path(field.id)) %></td>
          <td><%= link_to(field.cnpj, supplier_path(field.id)) %></td>
          <td><%= link_to('Ver detalhes', supplier_path(field.id)) %></td>
        </tr>
      <% end %>
      </tbody>
  </table>

 <% if @supplier.empty? %>
      <p>Não existem fornecedores cadastrados</p>
  <% end %>
   <div>
    <%= link_to('Cadastrar Fornecedor', new_supplier_path, class:'btn btn-primary')%>
  </div>
</section>

