<%= bootstrap_form_with(model: @supplier, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-5") do |form| %>
  <div>
		<%= form.text_field :name, required: true %>
	</div>
	<div>
  	<%= form.text_field :company_name, required: true %>
	</div>
	<div>
  	<%= form.text_field :cnpj, maxlength:18, required: true, placeholder:'00.000.000/0000-00' %>
	</div>
	<div>
  	<%= form.text_field :address, required: true %>
	</div>
	<div>
  	<%= form.email_field :email %>
	</div>
  <div>
  	<%= form.text_field :telephone, required: true %>
	</div>
  
  <div> 
		<%= form.submit 'Enviar', class: "btn btn-success" %>
	</div>

<% end %>


<% if(@supplier.errors.any?) %>
<p> A validação falhou: </p>
	<ul>
		<% @supplier.errors.full_messages.each do |message| %>
		<li> <%= message %> </li>
		<% end %>
	</ul>
<% end %>

<script src="/assets/cnpj_mask.js"></script>