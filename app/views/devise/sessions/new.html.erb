<h2>Log in</h2>
<% if flash[:alert] %>
      <div class="notice"><%= flash[:alert] %></div>
<% end %>
    

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-5") do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
